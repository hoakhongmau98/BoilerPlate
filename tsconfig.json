{
  "compilerOptions": {
    "resolveJsonModule": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2022",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "./src",
    "allowJs": true,
    "checkJs": true,
    "lib": [
        "ES2022",
        "ES2022.Array",
        "ES2022.Object",
        "ES2022.String"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": false,
    "exactOptionalPropertyTypes": false,
    "skipLibCheck": true,
    "paths": {
      "*": [
          "../node_modules/*",
          "./types/*"
      ],
      "@configs/*": [
          "./configs/*"
      ],
      "@entities/*": [
          "./entities/*"
      ],
      "@initializers/*": [
          "./initializers/*"
      ],
      "@models/*": [
          "./models/*"
      ],
      "@interfaces/*": [
          "./interfaces/*"
      ],
      "@services/*": [
          "./services/*"
      ],
      "@repositories/*": [
          "./repositories/*"
      ],
      "@database/*": [
          "./database/*"
      ],
      "@libs/*": [
          "./libs/*"
      ],
      "@controllers/*": [
          "./controllers/*"
      ],
      "@middlewares/*": [
          "./middlewares/*"
      ],
      "@chats/*": [
          "./chats/*"
      ],
      "@workers/*": [
        "./workers/*"
      ],
      "~": [
          "./*"
      ]
    }
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./src/database/migrations/*",
    "./src/database/seeders/*",
    "./src/database/masters/*",
    "node_modules",
    "dist"
  ]
}
